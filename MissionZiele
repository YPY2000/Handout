<script>
document.addEventListener('DOMContentLoaded', function () {
    const mainNav = document.getElementById('main-nav');
    const contentSections = document.querySelectorAll('.content-section');

    mainNav.addEventListener('click', (e) => {
        if (e.target.matches('.nav-link')) {
            const targetId = e.target.dataset.target;

            contentSections.forEach(section => {
                section.classList.toggle('hidden', section.id !== targetId);
            });
            
            mainNav.querySelectorAll('.nav-link').forEach(link => {
                link.classList.toggle('active', link.dataset.target === targetId);
            });
        }
    });

    const missionSegments = {
        'mission-1': '<strong>Das Kundenversprechen:</strong> Der ultimative Nutzen für unsere Kunden - Befähigung, in ihrem Markt erfolgreich und führend zu sein.',
        'mission-2': '<strong>Das Geschäftsmodell: Ein Partner-Ökosystem:</strong> Erfolg im Verbund mit spezialisierten Partnern. OXID als Orchestrator.',
        'mission-3': '<strong>Das Produkt: Eine flexible Plattform:</strong> Das technologische Fundament, das Partnern die Abbildung beliebig komplexer Prozesse ermöglicht.',
        'mission-4': '<strong>Die strategische Lösung:</strong> Schaffung wiederverwendbarer "Branchen-Partner-Prozess-Segment-Lösungen", die komplexe Anforderungen hocheffizient abbilden.'
    };
    const missionStatement = document.getElementById('mission-statement');
    missionStatement.addEventListener('click', (e) => {
        if (e.target.classList.contains('mission-segment')) {
            const targetId = e.target.dataset.target;
            document.querySelectorAll('.mission-segment').forEach(el => el.classList.remove('active'));
            e.target.classList.add('active');
            document.getElementById('mission-details').innerHTML = `<p class="text-stone-700">${missionSegments[targetId]}</p>`;
        }
    });

    const strategyCards = document.querySelectorAll('.strategy-card');
    strategyCards.forEach(card => {
        card.addEventListener('click', () => {
            document.getElementById(card.dataset.target).classList.toggle('hidden');
            card.classList.toggle('shadow-xl');
        });
    });

    const goalsData = [
        { id: 1, title: "Bestandskundenbasis erhalten", target: "< 11", unit: "EE-Kundenverluste", beitrag: 'Die Mission ist das zentrale Instrument, um Bestandskunden zu binden. Wir überführen sie gemeinsam mit Partnern aktiv in die neue Welt der "eCommerce Prozess Segment Lösungen" und befähigen sie so, auch in Zukunft "in der ersten Liga zu spielen".' },
        { id: 2, title: "Neukunden gewinnen", target: "> 53", unit: "neue EE-Kunden", beitrag: 'Wir gewinnen Neukunden, weil wir ihnen hochspezialisierte "eCommerce Prozess Segment Lösungen" anbieten, mit denen sie ihre individuellen Herausforderungen meistern und "in der ersten Liga spielen" können.' },
        { id: 3, title: "Marktrelevante Partnerlösungen", target: "von 1 auf ≥ 3", unit: "skalierbare Lösungen", beitrag: 'Dieses Ziel ist die direkte, messbare Operationalisierung der Mission. Der Aufbau dieser "tollen eCommerce-Lösungen" durch unsere Partner ist der konkrete Schritt, um die Mission in die Realität umzusetzen.' },
        { id: 4, title: "Neue Implementierungspartner", target: "3 bis 6", unit: "neue Partner", beitrag: 'Ein wachsendes Netzwerk an kompetenten Partnern, die unsere Vision verstehen und umsetzen, sichert unsere Marktreichweite und ist die treibende Kraft hinter der Skalierung der Mission.' },
        { id: 5, title: "Qualitative Releases", target: "Kontinuierlich", unit: "stabile Plattform", beitrag: 'Dieses Ziel operationalisiert das Fundament der Mission – die "Basis der OXID Plattform". Eine moderne Plattform ist die Voraussetzung, damit Partner "tolle eCommerce-Lösungen" entwickeln können.' },
        { id: 6, title: "OXID Lösungskompetenz", target: "Aktiv", unit: "Partner befähigen", beitrag: 'Dieses Ziel operationalisiert den aktiven Part von OXID ("wir") in der Mission. Wir agieren als "Enabler" und schaffen die strategische Grundlage für den Erfolg unserer Partner.' },
        { id: 7, title: "Neue eSS-Partner gewinnen", target: "6", unit: "neue eSS-Partnerschaften", beitrag: 'Neue eSS-Partner (z.B. für Payment) stärken das Ökosystem. Sie bringen Innovationen, die es unseren Partnern ermöglichen, noch "tollere eCommerce-Lösungen" zu bauen.' },
        { id: 8, title: "Bestehende eSS-Partner aktivieren", target: "Intensivieren", unit: "der Zusammenarbeit", beitrag: 'Die Aktivierung stellt sicher, dass die Bausteine der "tollen eCommerce-Lösungen" von höchster Qualität sind und reibungslos funktionieren. Das maximiert den Wert bestehender Beziehungen.' }
    ];
    const kpiGrid = document.getElementById('kpi-grid');
    goalsData.forEach(goal => {
        const card = document.createElement('div');
        card.className = 'kpi-card bg-white p-6 rounded-lg shadow-md cursor-pointer';
        card.innerHTML = `<h3 class="font-semibold text-stone-800">${goal.title}</h3><p class="text-3xl font-bold text-emerald-600 my-2">${goal.target}</p><p class="text-sm text-stone-500 mb-4">${goal.unit}</p><div class="goal-details hidden mt-4 pt-4 border-t border-stone-200"><h4 class="font-semibold text-sm text-stone-800">Einzahlung der Mission auf das Ziel:</h4><p class="text-stone-600 text-sm mt-1">${goal.beitrag}</p></div>`;
        kpiGrid.appendChild(card);
        card.addEventListener('click', () => {
            card.querySelector('.goal-details').classList.toggle('hidden');
            card.classList.toggle('shadow-xl');
        });
    });

    const chartConfig = {
        type: 'bar',
        data: {
            labels: ['Neue EE-Kunden', 'Neue Partnerlösungen', 'Neue Impl.-Partner', 'Neue eSS-Partner', 'Verlust EE-Kunden'],
            datasets: [{
                label: 'Zielwert 2025',
                data: [53, 3, 6, 6, -11],
                backgroundColor: ['rgba(16, 185, 129, 0.7)','rgba(5, 150, 105, 0.7)','rgba(6, 95, 70, 0.7)','rgba(4, 120, 87, 0.7)','rgba(220, 38, 38, 0.7)'],
                borderColor: ['rgb(16, 185, 129)','rgb(5, 150, 105)','rgb(6, 95, 70)','rgb(4, 120, 87)','rgb(220, 38, 38)'],
                borderWidth: 1
            }]
        },
        options: {
            responsive: true, maintainAspectRatio: false,
            plugins: { legend: { display: false }, tooltip: { callbacks: { label: (c) => (c.label === 'Verlust EE-Kunden') ? `Maximaler Verlust: ${Math.abs(c.parsed.y)}` : `Mindestziel: ${c.parsed.y}` } } },
            scales: { y: { beginAtZero: true, title: { display: true, text: 'Anzahl' } } }
        }
    };
    new Chart(document.getElementById('zieleChartOverview').getContext('2d'), chartConfig);
    
    const ecoSystem = {
        kunde: "<strong>Business Competency:</strong> Definiert Geschäftsanforderungen und -prozesse.",
        partner: "<strong>Business Process Competency:</strong> Kompetenz zur Implementierung von Geschäftsprozessen auf OXID-Technologie und anderen relevanten Systemen (ERP, PIM, ...).",
        oxid: "<strong>Competency in developing this technology:</strong> Kernkompetenz in der Entwicklung der Plattform-Technologie und im Aufbau des Partnernetzwerks.",
        ess: "<strong>Competency in management of specific processes:</strong> Kompetenz im Management spezifischer Prozesse, oft am Ende der Shop-Transaktion (z.B. Payment, Logistik)."
    };
    document.getElementById('eco-system-diagram').addEventListener('click', (e) => {
        const level = e.target.closest('.eco-level');
        if (level) {
            const levelId = level.id.replace('eco-', '');
            const detailKey = (levelId.startsWith('ess')) ? 'ess' : levelId;
            document.querySelectorAll('.eco-level').forEach(el => el.classList.remove('highlight'));
            level.classList.add('highlight');
            document.getElementById('eco-details').innerHTML = `<p class="text-stone-700 text-sm">${ecoSystem[detailKey]}</p>`;
        }
    });
});
</script>
</body>
</html>
