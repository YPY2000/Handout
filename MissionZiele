<script>
document.addEventListener('DOMContentLoaded', function () {
    const missionSegments = {
        'mission-1': '<strong>Das Kundenversprechen:</strong> Dies ist der ultimative Zweck und Nutzen, den OXID seinen Kunden bietet. Es geht nicht nur um Software, sondern um die Befähigung der Kunden, in ihrem Markt erfolgreich und führend zu sein.',
        'mission-2': '<strong>Das Geschäftsmodell: Ein Partner-Ökosystem:</strong> Der Erfolg wird im Verbund mit einem Ökosystem aus spezialisierten Partnern erreicht. OXID agiert als Orchestrator, die Partner bringen ihre spezifische Kompetenz ein.',
        'mission-3': '<strong>Das Produkt: Eine flexible Plattform:</strong> Dies benennt das technologische Fundament. Die Plattform ist so flexibel und erweiterbar konzipiert, dass Partner beliebige Verkaufsprozesse abbilden können.',
        'mission-4': '<strong>Die strategische Lösung:</strong> Es werden keine generischen Shops geschaffen, sondern wiederverwendbare "Branchen-Prozess-Segment-Lösungen", die komplexe Anforderungen hocheffizient und kostengünstig abbilden.'
    };

    const missionStatement = document.getElementById('mission-statement');
    const missionDetails = document.getElementById('mission-details');

    missionStatement.addEventListener('click', (e) => {
        if (e.target.classList.contains('mission-segment')) {
            const targetId = e.target.dataset.target;

            document.querySelectorAll('.mission-segment').forEach(el => el.classList.remove('active'));
            e.target.classList.add('active');

            missionDetails.innerHTML = `<p class="text-stone-700">${missionSegments[targetId]}</p>`;
        }
    });

    const strategyCards = document.querySelectorAll('.strategy-card');
    strategyCards.forEach(card => {
        card.addEventListener('click', () => {
            const targetId = card.dataset.target;
            const detailElement = document.getElementById(targetId);
            const isVisible = !detailElement.classList.contains('hidden');
            
            detailElement.classList.toggle('hidden');
            card.classList.toggle('shadow-xl', !isVisible);
            card.classList.toggle('shadow-md', isVisible);
        });
    });

    const goalsData = [
        {
            id: 1,
            title: "Bestandskundenbasis erhalten",
            target: "< 11",
            unit: "EE-Kundenverluste",
            beitrag: "Sichert das wirtschaftliche Fundament des Unternehmens und bindet Partner an OXID."
        },
        {
            id: 2,
            title: "Neukunden gewinnen",
            target: "> 53",
            unit: "neue EE-Kunden",
            beitrag: "Motor für Wachstum und Kompensation von Abwanderung. Wir gewinnen durch hochspezialisierte Prozess-Segment-Lösungen."
        },
        {
            id: 3,
            title: "Marktrelevante Partnerlösungen",
            target: "von 1 auf ≥ 3",
            unit: "skalierbare Lösungen",
            beitrag: "Direkte Umsetzung der Mission und Aufbau wiederverwendbarer Assets, die das Geschäftsmodell stärken."
        },
        {
            id: 4,
            title: "Neue Implementierungspartner",
            target: "3 bis 6",
            unit: "neue Partner",
            beitrag: "Skalierung der Mission durch erhöhte Marktreichweite und Resilienz des Ökosystems."
        },
        {
            id: 5,
            title: "Qualitative Releases",
            target: "Kontinuierlich",
            unit: "stabile & moderne Plattform",
            beitrag: "Sicherung des technologischen Fundaments der Mission, das unsere Partner befähigt."
        },
        {
            id: 6,
            title: "OXID Lösungskompetenz",
            target: "Aktiv",
            unit: "Partner befähigen",
            beitrag: "Steuerung des Partner-Ökosystems durch Werkzeuge, Leads und Know-how zur Umsetzung der Mission."
        },
        {
            id: 7,
            title: "Neue eSS-Partner gewinnen",
            target: "6",
            unit: "neue eSS-Partnerschaften",
            beitrag: "Stärkung des Ökosystems mit wiederverwendbaren Diensten (z.B. Payment, Logistik)."
        },
        {
            id: 8,
            title: "Bestehende eSS-Partner aktivieren",
            target: "Intensivieren",
            unit: "der Zusammenarbeit",
            beitrag: "Maximierung des Werts bestehender Partnerschaften für Effizienz und Profitabilität."
        }
    ];

    const kpiGrid = document.querySelector('#ziele .grid');
    goalsData.forEach(goal => {
        const card = document.createElement('div');
        card.className = 'kpi-card bg-white p-6 rounded-lg shadow-md cursor-pointer';
        card.innerHTML = `
            <h3 class="font-semibold text-stone-800">${goal.title}</h3>
            <p class="text-3xl font-bold text-emerald-600 my-2">${goal.target}</p>
            <p class="text-sm text-stone-500 mb-4">${goal.unit}</p>
            <div class="goal-details hidden mt-4 pt-4 border-t border-stone-200">
                <h4 class="font-semibold text-sm text-stone-800">Beitrag zur Mission:</h4>
                <p class="text-stone-600 text-sm">${goal.beitrag}</p>
            </div>
        `;
        kpiGrid.appendChild(card);
    });
    
    kpiGrid.addEventListener('click', (e) => {
        const card = e.target.closest('.kpi-card');
        if (card) {
            const details = card.querySelector('.goal-details');
            const isVisible = !details.classList.contains('hidden');
            details.classList.toggle('hidden');
            card.classList.toggle('shadow-xl', !isVisible);
            card.classList.toggle('shadow-md', isVisible);
        }
    });

    const ctx = document.getElementById('zieleChart').getContext('2d');
    new Chart(ctx, {
        type: 'bar',
        data: {
            labels: ['Neue EE-Kunden', 'Neue Partnerlösungen', 'Neue Impl.-Partner', 'Neue eSS-Partner', 'Verlust EE-Kunden'],
            datasets: [{
                label: 'Zielwert 2025',
                data: [53, 3, 6, 6, -11],
                backgroundColor: [
                    'rgba(16, 185, 129, 0.7)',
                    'rgba(5, 150, 105, 0.7)',
                    'rgba(6, 95, 70, 0.7)',
                    'rgba(4, 120, 87, 0.7)',
                    'rgba(220, 38, 38, 0.7)'
                ],
                borderColor: [
                    'rgb(16, 185, 129)',
                    'rgb(5, 150, 105)',
                    'rgb(6, 95, 70)',
                    'rgb(4, 120, 87)',
                    'rgb(220, 38, 38)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    display: false
                },
                tooltip: {
                    callbacks: {
                        label: function(context) {
                            let label = context.dataset.label || '';
                            if (label) {
                                label += ': ';
                            }
                            if (context.parsed.y !== null) {
                                label += context.parsed.y;
                                if(context.label === 'Verlust EE-Kunden') {
                                    label = `Maximaler Verlust: ${Math.abs(context.parsed.y)}`;
                                } else {
                                    label = `Mindestziel: ${context.parsed.y}`;
                                }
                            }
                            return label;
                        }
                    }
                }
            },
            scales: {
                y: {
                    beginAtZero: true,
                    title: {
                        display: true,
                        text: 'Anzahl'
                    }
                }
            }
        }
    });

});
</script>
</body>
</html>
